<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anulación de Transacción"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_receipt"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextReceiptNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_number_receipt"
        android:inputType="text" />

    <Button
        android:id="@+id/btnVoidTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/annul_transaction"
        android:layout_marginTop="16dp" />

    <!-- Puedes agregar más elementos de diseño según tus necesidades -->

</LinearLayout>
